/opt/tomcat/logs/catalina.out {
 copytruncate
 daily
 rotate <%=@log['daily_count'] %>
 compress
 missingok
 size <%=@log['catalina_size'] %>
}

/opt/tomcat/logs/catalina.log {
 copytruncate
 daily
 rotate <%=@log['daily_count'] %>
 compress
 missingok
 size <%=@log['catalina_size'] %>
}

/opt/tomcat/logs/localhost.log {
 copytruncate
 daily
 rotate <%=@log['daily_count'] %>
 compress
 missingok
 size <%=@log['catalina_size'] %>
}